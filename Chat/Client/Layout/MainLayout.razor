@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <ChatHeader DrawerToggle="DrawerToggle" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Width="300px" Variant="@DrawerVariant.Mini">
        <NavMenu DrawerOpen="@_drawerOpen" />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}